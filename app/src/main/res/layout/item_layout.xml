<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:elevation="4dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="4dp"
    app:cardCornerRadius="8dp" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:padding="8dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/ic_flag_24"
        android:id="@+id/IvFlag"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_below="@+id/IvFlag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

            android:padding="16dp"
            android:layout_centerInParent="true"
            android:layout_above="@+id/capital"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Name :" />


        <TextView
            android:layout_centerInParent="true"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/region"
            android:padding="16dp"
            android:textColor="@color/black"
            android:text="Capital :" />

        <TextView
            android:layout_centerInParent="true"
            android:padding="16dp"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Region :" />

        <TextView
            android:layout_below="@+id/region"
            android:padding="16dp"
            android:layout_centerInParent="true"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Sub region :" />

        <TextView
            android:layout_below="@+id/subregion"
            android:padding="16dp"
            android:layout_centerInParent="true"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Population :" />

        <TextView
            android:layout_below="@+id/population"
            android:padding="16dp"
            android:layout_centerInParent="true"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Borders :" />

        <TextView
            android:layout_below="@+id/borders"
            android:padding="16dp"
            android:layout_centerInParent="true"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Languages :" />


    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:padding="16dp"
            android:layout_centerInParent="true"
            android:layout_above="@+id/capital"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name" />


        <TextView
            android:id="@+id/capital"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/region"
            android:padding="16dp"
            android:text="Capital" />

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/region"
            android:padding="16dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Region" />

        <TextView
            android:layout_below="@+id/region"
            android:id="@+id/subregion"
            android:padding="16dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub region" />

        <TextView
            android:layout_below="@+id/subregion"
            android:id="@+id/population"
            android:padding="16dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Population" />

        <TextView
            android:layout_below="@+id/population"
            android:id="@+id/borders"
            android:padding="16dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Borders" />

        <TextView
            android:layout_below="@+id/borders"
            android:id="@+id/languages"
            android:padding="16dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Languages" />

    </LinearLayout>

    </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
